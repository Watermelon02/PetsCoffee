<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petscoffee">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetsCoffee">
        <service
            android:name=".service.WeatherService"
            android:exported="false"></service>

        <activity
            android:name=".ui.pets.activities.LoginActivity"
            android:exported="true"
            android:label="PetsCoffee"
            android:theme="@style/Theme.PetsCoffee.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.petscoffee.ui.pets.activities.PictureActivity"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ui.pets.activities.WorkActivity"
            android:exported="false" />

        <service
            android:name=".service.WorkService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.pets.activities.PetsActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.pets.activities.ShopActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.pets.activities.BagActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.pets.activities.MainPageActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.PetsCoffee.NoActionBar" />
        <activity
            android:name=".ui.pets.activities.PictureActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.pets.activities.FirstActivity"
            android:exported="true" />
    </application>

</manifest>